<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alisonjc.buzzerbutler.fragments.AddUserFragment"
    android:orientation="vertical"
    android:weightSum="130">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_default_image"
        android:maxHeight="20dp"
        android:maxWidth="20dp"
        android:layout_weight="30"
        android:layout_gravity="center"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="25"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textAlignment="gravity"
            android:text="Name: "
            android:textColor="@color/color_default"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="John Doe"
            android:textAlignment="gravity"
            android:gravity="bottom"
            android:textColorHint="@color/color_light_gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="25"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textAlignment="gravity"
            android:text="Phone #: "
            android:textColor="@color/color_default"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/phone_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="phone"
            android:hint="2061234567"
            android:textAlignment="gravity"
            android:gravity="bottom"
            android:textColorHint="@color/color_light_gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="25"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pin Code: "
            android:gravity="top"
            android:textAlignment="gravity"
            android:textColor="@color/color_default"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/pincode_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="2222"
            android:inputType="number"
            android:maxLength="4"
            android:textAlignment="gravity"
            android:gravity="bottom"
            android:textColorHint="@color/color_light_gray"/>
    </LinearLayout>

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="SAVE"
        android:layout_weight="25"
        android:layout_margin="5dp"/>


</LinearLayout>
